<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.ricardomendes.abastecimento.MainActivity">

    <ImageView
        android:id="@+id/imgmain"
        android:layout_width="match_parent"
        android:layout_marginTop="45dp"
        android:layout_height="250dp"
        android:src="@drawable/main2"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/btCompensa"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/button_custom"
        android:layout_marginTop="30dp"
        android:src="@drawable/btcompensa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btMedia"
        app:layout_constraintTop_toBottomOf="@id/imgmain" />

    <TextView
        android:id="@+id/txta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/axg"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/btCompensa"
        app:layout_constraintRight_toRightOf="@id/btCompensa"
        app:layout_constraintTop_toBottomOf="@id/btCompensa" />

    <ImageButton
        android:id="@+id/btMedia"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/button_media"
        android:background="@drawable/button_custom"
        app:layout_constraintLeft_toRightOf="@id/btCompensa"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgmain"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/media"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/btMedia"
        app:layout_constraintTop_toBottomOf="@id/btMedia"
        app:layout_constraintRight_toRightOf="@id/btMedia"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/txta"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>
